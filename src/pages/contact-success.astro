---
import Layout from "~/Layout.astro";
import { ArrowLeftIcon } from "lucide-react";
---

<Layout>
  <section class="container px-6 pt-20 pb-24 md:px-8 md:pt-32">
    <div class="max-w-prose">
      <h1
        class="font-serif text-4xl leading-tight font-medium text-zinc-950 md:text-6xl dark:text-zinc-50"
      >
        Thank you
      </h1>
      <p class="mt-6 text-lg leading-relaxed text-zinc-600 dark:text-zinc-400">
        Your message has been received. I'll get back to you soon.
      </p>
      <a
        href="/"
        class="mt-10 inline-flex items-center gap-2 text-sm font-medium text-emerald-800 dark:text-emerald-400 transition-colors hover:text-emerald-900 dark:hover:text-emerald-500"
      >
        <ArrowLeftIcon className="size-4" />
        Back to home
      </a>
    </div>
  </section>
</Layout>
