---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"textarea"> {}

const { class: className, ...props } = Astro.props;
---

<textarea
  class:list={[
    "block font-normal w-full rounded-md px-3.5 py-2 text-base text-zinc-950 outline-1 -outline-offset-1 outline-black/10 focus:outline-2 focus:-outline-offset-2 focus:outline-zinc-500 dark:text-zinc-50 dark:outline-white/10",
    className,
  ]}
  {...props}></textarea>
